#!<%= @shell %>

LOCK_FILE=/var/lock/duplicity.$(basename $0).lock
<%- @_env_vars.sort.each do |key,val| -%>
export <%= key -%>='<%= val %>'
<%- end -%>

if [ -f $LOCK_FILE ]; then
    echo "An existing duplicity job is running"
    exit 1
fi
touch $LOCK_FILE

<%- @pre_commands.each do |cmd| -%>
<%= cmd %>
<%- end -%>

duplicity \
  <%- @_flags.each do |flag| -%>
  <%= flag -%> \
  <%- end -%>
  <%- @_options.sort.each do |key,val| -%>
  <%= key -%> <%= val -%> \
  <%- end -%>
  <%- @directories.each do |dir| -%>
  --include "<%= dir -%>" \
  <%- end -%>
  --exclude '**' \
  / \
  <%= @target_url %>

<%- if @remove_older_than != false -%>
duplicity \
  remove-older-than <%= @remove_older_than -%> \
  <%- @_flags.each do |flag| -%>
  <%= flag -%> \
  <%- end -%>
  <%- @_options.sort.each do |key,val| -%>
  <%= key -%> <%= val -%> \
  <%- end -%>
  <%= @target_url %>
<%- end -%>

rm $LOCK_FILE

<%- @post_commands.each do |cmd| -%>
<%= cmd %>
<%- end -%>
